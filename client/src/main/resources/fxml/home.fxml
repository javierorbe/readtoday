<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
  <top>
    <ToolBar nodeOrientation="RIGHT_TO_LEFT" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <items>
        <MenuBar>
          <menus>
            <Menu mnemonicParsing="false" text="Opciones">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#handleButtonAction" text="Cerrar sesion" />
              </items>
            </Menu>
          </menus>
        </MenuBar>
        <Button mnemonicParsing="false" onAction="#performSearch" text="Search"/>
        <TextField fx:id="channelsByCategory" alignment="CENTER_RIGHT" promptText="Category"/>
      </items>
    </ToolBar>
  </top>
  <left>
    <SplitPane dividerPositions="0.9848484848484849" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <BorderPane>
        <center>
          <ListView fx:id="channelListView" prefHeight="200.0" prefWidth="200.0" />
        </center>
        <top>
          <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Filter by category:">
              <VBox.margin>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
              </VBox.margin>
            </Label>
            <HBox>
              <ComboBox fx:id="channelCategorySelector" maxWidth="Infinity" HBox.hgrow="SOMETIMES">
                <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </HBox.margin>
              </ComboBox>
              <Button minWidth="-Infinity" mnemonicParsing="false" onAction="#unselectCategory" text="Clear">
                <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </HBox.margin>
              </Button>
            </HBox>
            <opaqueInsets>
              <Insets />
            </opaqueInsets>
            <BorderPane.margin>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
          </VBox>
        </top>
      </BorderPane>
      <AnchorPane prefHeight="200.0" prefWidth="200.0" />
    </SplitPane>
  </left>
  <center>
    <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <center>
        <ListView fx:id="newChannelListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
      </center>
    </BorderPane>
  </center>
  <bottom>
    <Button mnemonicParsing="false" onAction="#goToAdmin" text="Admin mode"
      BorderPane.alignment="CENTER"/>
  </bottom>
</BorderPane>
