<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1">
  <center>
    <SplitPane dividerPositions="0.3" prefHeight="160.0" prefWidth="200.0"
               BorderPane.alignment="CENTER">
      <BorderPane>
        <center>
          <ListView fx:id="channelListView" prefHeight="200.0" prefWidth="200.0"/>
        </center>
        <top>
          <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Filter by category:">
              <VBox.margin>
                <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
              </VBox.margin>
            </Label>
            <HBox>
              <ComboBox fx:id="channelCategorySelector" maxWidth="Infinity" HBox.hgrow="SOMETIMES">
                <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </HBox.margin>
              </ComboBox>
              <Button text="Clear" minWidth="-Infinity" mnemonicParsing="false"
                      onAction="#unselectCategory">
                <HBox.margin>
                  <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </HBox.margin>
              </Button>
            </HBox>
            <opaqueInsets>
              <Insets/>
            </opaqueInsets>
            <BorderPane.margin>
              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </BorderPane.margin>
          </VBox>
        </top>
      </BorderPane>
      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0"/>
    </SplitPane>
  </center>
</BorderPane>
